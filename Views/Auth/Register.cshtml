@model List<User>

@{
    ViewData["Title"] = "Register";
}
<div>
    <section class="vh-80 bg-image"
             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6" style="padding: 1rem 1rem 1rem 1rem;">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body">
                                <h2 class="text-uppercase text-center">Create an account</h2>

                                <form form method="post" asp-action="Register">

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" name="Username" id="form3Example1cg" class="form-control form-control-lg" required placeholder="Your Name" />
                                       
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="email" name="MailID" id="form3Example3cg" class="form-control form-control-lg" placeholder="Your Email" />
                                      
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" id="form3Example4cg" class="form-control form-control-lg" required placeholder="Password" />
                                       
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" name="PasswordHash" id="form3Example4cdg" class="form-control form-control-lg" required placeholder="Repeat your password" />
                                       
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                        <label class="form-check-label" for="form2Example3g">
                                            I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" data-mdb-button-init
                                                data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            Register
                                        </button>
                                    </div>

                                    <p class="text-center text-muted mt-1 mb-0">
                                        Have already an account? <a href="/Auth/Login"
                                        class="fw-bold text-body"><u>Login here</u></a>
                                    </p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br />

    <h2>Registered Users</h2>
    <br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password (Hashed)</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.PasswordHash</td> <!-- Assuming you have PasswordHash stored -->
                    <td>
                        <!-- Delete User Button -->
                        <form method="post" asp-action="DeleteUser">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

